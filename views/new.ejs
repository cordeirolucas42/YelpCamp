<% include partials/header %>

<div class="container" style="margin-top:70px;">
	<h3 class="text-center pt-3">
	Create a New Campground
	</h3>
	<div class="mx-auto my-4" style="width:30%">
		<form action="/campgrounds" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="camp[name]" placeholder="Name">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="camp[image]" placeholder="Image Url">
			</div>
			<div class="form-group">
				<textarea class="form-control" name="camp[description]" placeholder="Description" rows="5"></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-sm btn-primary" style="width:100%;" type="submit">Submit</button>
			</div>	
		</form>
		<a href="/campgrounds">Go Back</a>
	</div>	
</div>

<% include partials/footer %>