<% include ../partials/header %>

<div class="container" style="margin-top:70px;">
	<h3 class="text-center pt-3">
	Edit comment
	</h3>
	<div class="mx-auto my-4" style="width:45%">
		<form action="/campgrounds/<%=campId%>/comments/<%=comment._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<textarea class="form-control" name="comment[text]" rows="5"><%= comment.text %></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-sm btn-primary" style="width:100%;" type="submit">Submit</button>
			</div>	
		</form>
		<a href="/campgrounds/<%=campId %>" >Go Back</a>
	</div>	
</div>

<% include ../partials/footer %>