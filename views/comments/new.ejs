<% include ../partials/header %>

<div class="container" style="margin-top:70px;">
	<h3 class="text-center pt-3">
	Add New Comment to <%=camp.name%>
	</h3>
	<div class="mx-auto my-4" style="width:45%">
		<form action="/campgrounds/<%=camp._id%>/comments" method="POST">
			<div class="form-group">
				<textarea class="form-control" name="comment[text]" rows="5"></textarea>
            </div>
            <div class="form-group">
				<input class="form-control" type="text" name="comment[author]" placeholder="Author">
			</div>
			<div class="form-group">
				<button class="btn btn-sm btn-primary" style="width:100%;" type="submit">Submit</button>
			</div>	
		</form>
		<a href="/campgrounds/<%=camp._id%>">Go Back</a>
	</div>	
</div>

<% include ../partials/footer %>