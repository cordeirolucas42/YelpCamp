<% include partials/header %>

<div class="container" style="margin-top:70px;">
	<header class="jumbotron">
		<div class="container">
			<h1 class="display-4">
			Welcome to YelpCamp!
			</h1>
			<p>
				View our hand-picked campground from all over the world!	
			</p>
			<p>
				<a class="btn btn-primary btn-lg" href="campgrounds/new">Add New Campground</a>	
			</p>
		</div>		
	</header>		
	<div class="row text-center">
			<% campgrounds.forEach((campground)=>{ %>
			<div class="col-lg-4 col-sm-6 p-3">	
				<div>
					<a href= "/campgrounds/<%=campground._id %>" ><img src="<%=campground.image%>"></a>
					<div>
						<p>
							<%= campground.name %>
						</p>
					</div>
				</div>
			</div>
			<% }); %>
	</div>
</div>

<% include partials/footer %>